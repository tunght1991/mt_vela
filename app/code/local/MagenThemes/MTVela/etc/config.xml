<config>
    <modules>
        <MagenThemes_MTVela>
            <version>2.2.2</version>
        </MagenThemes_MTVela>
    </modules>
    <frontend>
        <routers>
            <mtvela>
                <use>standard</use>
                <args>
                    <module>MagenThemes_MTVela</module>
                    <frontName>mtvela</frontName>
                </args>
            </mtvela>
        </routers>
        <layout>
            <updates>
                <mtvela>
                    <file>mtvela.xml</file>
                </mtvela>
            </updates>
        </layout> 
        <events>
            <controller_action_postdispatch>
                <observers>
                    <prevnext_set_filtered_category_product_collection>
                        <class>mtvela/observer</class>
                        <method>setPrevNextProductCollection</method>
                    </prevnext_set_filtered_category_product_collection>
                </observers>
            </controller_action_postdispatch>
            <catalog_block_product_list_collection>
                <observers>
                    <mtvela>
                        <type>model</type>
                        <class>mtvela/observer</class>
                        <method>catalogBlockProductCollectionBeforeToHtml</method>
                    </mtvela>
                </observers>
            </catalog_block_product_list_collection>
        </events>
    </frontend>
    <admin>
        <routers>
	       <mtvela>
				<use>admin</use>
				<args>
				    <module>MagenThemes_MTVela</module>
				    <frontName>mtvela</frontName>
				</args>
	       </mtvela>
        </routers>
    </admin>
    <adminhtml>
		<layout>
		    <updates>
			<mtvela>
			    <file>mtvela.xml</file>
			</mtvela>
		    </updates>
		</layout>
        <events>
            <controller_action_postdispatch_adminhtml_system_config_save>
                <observers>
                    <mtvela>
                        <type>singleton</type>
                        <class>mtvela/observer</class>
                        <method>configSave</method>
                    </mtvela>
                </observers>
            </controller_action_postdispatch_adminhtml_system_config_save>
            <store_edit>
                <observers>
                    <mtvela>
                        <type>singleton</type>
                        <class>mtvela/observer</class>
                        <method>storeEdit</method>
                    </mtvela>
                </observers>
            </store_edit>
        </events>
    </adminhtml>   
    <global>
        <models>
            <mtvela>
                <class>MagenThemes_MTVela_Model</class>
            </mtvela>
            <core>
                <rewrite>
                    <layout>MagenThemes_MTTheme_Model_System_Layout_Layout</layout>
                </rewrite>
            </core>
        </models>
        <resources>
            <mtvela_setup>
                <setup>
                    <module>MagenThemes_MTVela</module>
                </setup>
            </mtvela_setup>
        </resources>
        <blocks>
            <mtvela>
                <class>MagenThemes_MTVela_Block</class>
            </mtvela>
        </blocks>
        <helpers>
            <mtvela>
                <class>MagenThemes_MTVela_Helper</class>
            </mtvela>
        </helpers>
    </global>
    <default>
        <mtvela>
            <header>
                <sticky_enable>1</sticky_enable>
                <hide_on_mobile>0</hide_on_mobile>
                <compare>1</compare>
                <layout>1</layout>
            </header>
            <menu>
                <effect>slide</effect>
                <menuleft_effect>fade</menuleft_effect>
                <home>1</home>
                <enable_custom>1</enable_custom>
                <static_identifier>custom_menu</static_identifier>
                <show_if_no_children>0</show_if_no_children>
                <label1>New</label1>
                <label2>Hot!</label2>
                <url_key>about-magento-demo-store:right</url_key>
                <static_identifier>custom_menu:left</static_identifier>
            </menu>
            <category>
                <aspect_ratio>0</aspect_ratio>
                <aspect_ratio_size></aspect_ratio_size>
                <alt_image>0</alt_image>
                <alt_image_column>position</alt_image_column>
                <alt_image_column_value>2</alt_image_column_value>
                <image_width>270</image_width>
                <image_height>255</image_height>
            </category>
            <category_grid>
                <column_count>3</column_count>
                <column_count_768>3</column_count_768>
                <column_count_640>2</column_count_640>
                <column_count_480>1</column_count_480>
                <equal_height>0</equal_height>
                <hover_effect>1</hover_effect>
                <display_rating>0</display_rating>
                <display_addtocart>2</display_addtocart>
                <display_addtolinks>0</display_addtolinks>
                <addtolinks_simple>1</addtolinks_simple>
            </category_grid>
            <category_list>
                <hover_effect>1</hover_effect>
                <addtolinks_simple>0</addtolinks_simple>
            </category_list>
            <product_page> 
                <replace_upsell>1</replace_upsell>
                <zoom_enable>1</zoom_enable>
                <zoom_width>350</zoom_width>
                <zoom_height>350</zoom_height>
                <zoom_position>inside</zoom_position>
                <zoom_adjustX></zoom_adjustX>
                <zoom_adjustY></zoom_adjustY>
                <zoom_count>3</zoom_count>
                <zoom_margin>5</zoom_margin>
                <upsell_hover_slider>1</upsell_hover_slider>
                <upsell_count>4</upsell_count>
                <replace_related>2</replace_related>
                <related_hover_slider>1</related_hover_slider>
                <related_count>4</related_count>
                <layout>default</layout>
                <product_social>1</product_social>
            </product_page>
            <product_labels>
                <new>1</new>
                <sale>1</sale>
            </product_labels>
            <footer>
                <links_column_auto_width>1</links_column_auto_width>
            </footer>
            <product_slider>
                <timeout></timeout>
                <speed>400</speed>
                <move_items>0</move_items>
            </product_slider>
            <magento_blocks>
                <top_links>1</top_links>
                <footer_links>1</footer_links>
                <footer_newsletter>1</footer_newsletter>
                <related_products_checkbox>0</related_products_checkbox>
            </magento_blocks>
            <sidebar_blocks_home>
                <compare>0</compare>
                <compared>0</compared>
                <viewed>0</viewed>
                <wishlist>0</wishlist>
                <poll>0</poll>
                <tags>0</tags>
                <paypal>0</paypal>
            </sidebar_blocks_home>
            <install>
                <overwrite_blocks>0</overwrite_blocks>
                <overwrite_pages>0</overwrite_pages>
            </install>
            <customization>
                <custom_css>0</custom_css>
            </customization>
        </mtvela>
        <mtvela_design>
            <colors>
                <text_color>#000000</text_color>
                <link_color>#000000</link_color>
                <link_hover_color>#ff3333</link_hover_color>
                <button_bg_color>#ff3333</button_bg_color>
                <button_color>#ffffff</button_color>
                <button_hover_bg_color>#ff3333</button_hover_bg_color>
                <button_hover_color>#ffffff</button_hover_color>
                <button_active_bg_color>#ff3333</button_active_bg_color>
                <button_active_color>#ffffff</button_active_color>
                <tool_icon_bg_color>#2f2b0d</tool_icon_bg_color>
                <tool_icon_hover_bg_color>#ff3333</tool_icon_hover_bg_color>
                <tool_icon_active_bg_color>#e5e5e5</tool_icon_active_bg_color>
                <icon_bg_color>#D52462</icon_bg_color>
                <icon_hover_bg_color>#5bd2ec</icon_hover_bg_color>
                <social_icon_bg_color>#888</social_icon_bg_color>
                <social_icon_hover_bg_color>#333</social_icon_hover_bg_color>
                <important_link_hover_color>#fff</important_link_hover_color>
                <important_link_hover_bg_color>#333</important_link_hover_bg_color>
                <label_new_bg_color>#ff3333</label_new_bg_color>
                <label_new_color>#ffffff</label_new_color>
                <label_sale_bg_color>#ff9900</label_sale_bg_color>
                <label_sale_color>#ffffff</label_sale_color>
                <price_color>#ff3333</price_color>
            </colors>
            <font>
                <font_size>14px</font_size>
                <primary_font_family_group>google</primary_font_family_group>
                <primary_font_family_custom>Arial, "Helvetica Neue", Helvetica, sans-serif</primary_font_family_custom>
                <primary_font_family>Raleway</primary_font_family>
                <primary_char_latin_ext>0</primary_char_latin_ext>
            </font>
            <effects>
                <shadow>0</shadow>
            </effects>
            <page>
                <bg_color>#eaeaea</bg_color>
                <bg_image></bg_image>
                <bg_repeat>repeat</bg_repeat>
                <bg_attachment>scroll</bg_attachment>
                <bg_positionx>center</bg_positionx>
                <bg_positiony>top</bg_positiony>
                <patterns>none</patterns>
            </page>
            <header>
                <top_border_color>#000</top_border_color>
                <bg_color>#e7e7e7</bg_color>
                <patterns>none</patterns>
                <inner_bg_color>#e7e7e7</inner_bg_color>
                <color>#000000</color>
                <link_color>#999999</link_color>
                <link_hover_color>#ff3333</link_hover_color>
                <search_color>#000000</search_color>
                <search_hover_color>#000000</search_hover_color>
                <search_border_color>#dcdcdc</search_border_color>
                <search_border_hover_color>#dcdcdc</search_border_hover_color>
                <dropdown_bg_color>#fff</dropdown_bg_color>
                <dropdown_color>#696969</dropdown_color>
                <dropdown_link_color>#696996</dropdown_link_color>
                <dropdown_link_hover_color>#181818</dropdown_link_hover_color>
            </header>
            <nav>
                <inner_bg_color>#eaeaea</inner_bg_color>
                <stretched>0</stretched>
                <border>1</border>
                <font_size>14</font_size>
                <font_uppercase>1</font_uppercase>
                <bg_color>#eaeaea</bg_color>
                <color>#999999</color>
                <hover_bg_color>#eaeaea</hover_bg_color>
                <hover_color>#000000</hover_color>
                <active_bg_color>#eaeaea</active_bg_color>
                <active_color>#000000</active_color>

                <dropdown_bg_color>#fff</dropdown_bg_color>
                <dropdown_color>#181818</dropdown_color>
                <dropdown_link_color>#696969</dropdown_link_color>
                <dropdown_link_hover_color>#181818</dropdown_link_hover_color>
                <label_bg_color>#5BD2EC</label_bg_color>
                <label_color>#fff</label_color>
                <label_bg_color2>#D52462</label_bg_color2>
                <label_color2>#fff</label_color2>
                <label_hover_bg_color>#555</label_hover_bg_color>
                <label_hover_color>#fff</label_hover_color>
            </nav>
            <main>
                <bg_color>#e7e7e7</bg_color>
                <patterns>none</patterns>
                <inner_bg_color>#fff</inner_bg_color>
            </main>
            <product_page>
                <addto_icon_bg_color>#aaa</addto_icon_bg_color>
                <addto_icon_hover_bg_color>#333</addto_icon_hover_bg_color>
                <tab_inner_bg_color>#ffffff</tab_inner_bg_color>
                <tab_bg_color>#f8f8f8</tab_bg_color>
                <tab_color>#000000</tab_color>
                <tab_hover_bg_color>#f8f8f8</tab_hover_bg_color>
                <tab_hover_color>#000000</tab_hover_color>
                <tab_active_bg_color>#fff</tab_active_bg_color>
                <tab_active_color>#000000</tab_active_color>
                <tab_panel_bg_color>#ffffff</tab_panel_bg_color>
            </product_page>
            <footer>
                <bg_color>#202020</bg_color>
                <patterns>none</patterns>
                <inner_bg_color></inner_bg_color>
                <color>#999999</color>
                <link_color>#181818</link_color>
                <link_hover_color>#ffffff</link_hover_color>
                <button_bg_color></button_bg_color>
                <button_color></button_color>
                <button_hover_bg_color></button_hover_bg_color>
                <button_hover_color>#ff3333</button_hover_color>
            </footer>
        </mtvela_design>
        <mtvela_layout>
            <responsive>
                <responsive>1</responsive>
                <rtl_language>0</rtl_language>
                <fluid_width>1</fluid_width>
            </responsive>
        </mtvela_layout>
    </default>
</config>